---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/hero.astro';
import Skills from '../components/sections/skills.astro';
import Projects from '../components/sections/projects.astro';
import About from '../components/sections/about.astro';

// Forcer le rendu côté serveur
export const prerender = false;

// Récupérer la langue depuis locals (définie dans le middleware)
// @ts-ignore - La propriété lang est définie dans le middleware
const currentLanguage = Astro.locals.lang || 'fr';

// Définir la langue pour la page (via la propriété currentLocale)
Astro.props.currentLocale = currentLanguage;

const pageTitle = 'Emmanuel Indemba';
---

<Layout title={pageTitle}>
	<Hero />
	<Skills />
	<Projects />
	<About />
</Layout>
