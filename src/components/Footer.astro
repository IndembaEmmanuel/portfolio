---
import {
    loadTranslations,
    translate,
} from "../i18n/i18n";

const currentLanguage = Astro.currentLocale || 'fr';

const translations = await loadTranslations(currentLanguage);
const t = (key: string) => translate(translations, key);

const currentYear = new Date().getFullYear();

const socialLinks = [
    {
        name: "GitHub",
        url: "https://github.com/IndembaEmmanuel",
        icon: "fab fa-github"
    },
    {
        name: "LinkedIn",
        url: "https://linkedin.com/in/emmanuelindemba",
        icon: "fab fa-linkedin"
    },
    {
        name: "Instagram",
        url: "https://www.instagram.com/numa773_",
        icon: "fab fa-instagram"
    }
];
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-logo">
                <h3>Emmanuel Indemba</h3>
                <p class="tagline">{t("footer.tagline")}</p>
            </div>
            
            <div class="footer-links">
                <div class="footer-section">
                    <h4>{t("footer.navigation")}</h4>
                    <ul>
                        <li><a href="#hero">{t("navbar.home")}</a></li>
                        <li><a href="#skills">{t("navbar.skills")}</a></li>
                        <li><a href="#projects">{t("navbar.projects")}</a></li>
                        <li><a href="#about">{t("navbar.about")}</a></li>
                    </ul>
                </div>
                
                <div class="footer-section">
                    <h4>{t("footer.contact")}</h4>
                    <ul class="contact-info">
                        <li>
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:indemba.emmanuel@gmail.com">indemba.emmanuel@gmail.com</a>
                        </li>
                        <li>
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Paris, France</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <div class="copyright">
                &copy; {currentYear} Emmanuel Indemba. {t("footer.rights")}
            </div>
            
            <div class="social-links">
                {socialLinks.map((link) => (
                    <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.name}>
                        <i class={link.icon}></i>
                    </a>
                ))}
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        background-color: var(--color-bg-secondary);
        color: var(--color-text-primary);
        padding: 4rem 0 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .footer::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at top left,
            rgba(52, 152, 219, 0.1),
            transparent 50%
        );
        z-index: 0;
    }
    
    .container {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    
    .footer-content {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 3rem;
        margin-bottom: 3rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 2rem;
    }
    
    .footer-logo h3 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        color: var(--color-accent);
    }
    
    .tagline {
        color: var(--color-text-secondary);
        font-size: 1rem;
        max-width: 300px;
        line-height: 1.6;
    }
    
    .footer-links {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }
    
    .footer-section h4 {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        color: var(--color-text-primary);
        position: relative;
        padding-bottom: 0.5rem;
    }
    
    .footer-section h4::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 3px;
        background: var(--color-accent);
        border-radius: 2px;
    }
    
    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .footer-section ul li {
        margin-bottom: 0.8rem;
    }
    
    .footer-section ul li a {
        color: var(--color-text-secondary);
        text-decoration: none;
        transition: color 0.3s ease;
    }
    
    .footer-section ul li a:hover {
        color: var(--color-accent);
    }
    
    .contact-info li {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }
    
    .contact-info i {
        color: var(--color-accent);
        font-size: 1rem;
        width: 20px;
    }
    
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 2rem;
    }
    
    .copyright {
        color: var(--color-text-secondary);
        font-size: 0.9rem;
    }
    
    .social-links {
        display: flex;
        gap: 1rem;
    }
    
    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--color-text-primary);
        transition: all 0.3s ease;
    }
    
    .social-links a:hover {
        background-color: var(--color-accent);
        color: white;
        transform: translateY(-3px);
    }
    
    .social-links i {
        font-size: 1.2rem;
    }
    
    @media (max-width: 992px) {
        .footer-content {
            grid-template-columns: 1fr;
        }
        
        .footer-logo {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .tagline {
            margin: 0 auto;
        }
    }
    
    @media (max-width: 768px) {
        .footer-links {
            grid-template-columns: 1fr;
        }
        
        .footer-bottom {
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
        }
    }
</style>
